<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/id_reader_bottom_bar"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@color/colorBackgroundDark"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingLeft="20dp" android:paddingRight="20dp" >

	<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
	              android:layout_weight="1" android:orientation="vertical"
	>
		<ImageButton android:id="@+id/id_include_context_btn" android:layout_width="40dp"
		             android:layout_height="40dp" android:layout_gravity="center"
		             android:background="@drawable/menu"/>
		<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
		          android:layout_gravity="center"
		          android:gravity="center" android:text="目录" android:textColor="#fff"
		          android:layout_marginTop="2dp"/>
	</LinearLayout>

	<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
	              android:layout_weight="3" android:orientation="vertical">
		<CheckBox android:id="@+id/id_include_night_btn" android:layout_width="40dp"
		          android:layout_height="40dp"
		          android:layout_gravity="center"
		          android:background="@drawable/mode_rbtn_selector" android:button="@null"
		          android:src="@drawable/sun"/>
		<TextView android:id="@+id/id_include_mode_tv" android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:layout_gravity="center"
		          android:gravity="center" android:text="夜间" android:textColor="#fff"
		          android:layout_marginTop="2dp"/>
	</LinearLayout>

	<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
	              android:layout_weight="1" android:gravity="center_vertical"
	              android:orientation="vertical">
		<ImageButton android:id="@+id/id_include_setting_btn" android:layout_width="40dp"
		             android:layout_height="40dp"
		             android:layout_gravity="center"
		             android:background="#00f9f9f9" android:src="@drawable/setting"/>
		<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
		          android:layout_gravity="center"
		          android:gravity="center" android:text="设置"
		          android:textColor="#fff" android:layout_marginTop="2dp"/>
	</LinearLayout>

</LinearLayout>