<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.gao.jiefly.jieflysbooks.View.FragmentScan">

	<android.support.v7.widget.RecyclerView android:id="@+id/id_fragment_scan_rv"
	                                        android:layout_width="match_parent"
	                                        android:layout_height="match_parent"
	                                        android:verticalScrollbarPosition="right"
	                                        android:scrollbars="vertical"
	                                        android:layout_above="@+id/id_scan_bottom_bar">

	</android.support.v7.widget.RecyclerView>
	<LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
	              android:id="@+id/id_scan_bottom_bar"
	              android:layout_alignParentBottom="true" android:orientation="horizontal">
		<Button android:layout_width="0dp" android:layout_height="match_parent"
		        android:id="@+id/id_scan_bottom_bar_left_btn"
		        android:layout_weight="1" android:background="#fff" android:text="收藏"
		        android:textSize="16sp"
		        android:textColor="#000"/>
		<Button android:layout_width="0dp" android:layout_height="match_parent"
		        android:layout_weight="1" android:background="#fff" android:text="全选"
		        android:id="@+id/id_scan_bottom_bar_right_btn"
		        android:textSize="16sp"
		        android:textColor="#000"/>
	</LinearLayout>
</RelativeLayout>
