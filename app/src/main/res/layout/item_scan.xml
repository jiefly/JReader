<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">
	<ImageView android:id="@+id/id_scan_item_icon"
	           android:layout_width="40dp"
	           android:layout_height="40dp"
	           android:layout_marginLeft="16dp"
	           android:src="@mipmap/ic_launcher"
	           android:layout_centerVertical="true"
	           android:layout_alignParentTop="true"/>
	<TextView android:id="@+id/id_scan_item_txt_name"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginLeft="20dp"
	          android:maxLines="1"
	          android:layout_toEndOf="@+id/id_scan_item_icon"
	          android:layout_toRightOf="@+id/id_scan_item_icon"
	          android:text="Title"
	          android:textColor="#000"
	          android:textSize="18sp"/>
	<TextView android:id="@+id/id_scan_item_txt_size"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignLeft="@+id/id_scan_item_txt_name"
	          android:layout_alignStart="@+id/id_scan_item_txt_name"
	          android:layout_below="@+id/id_scan_item_txt_name"
	          android:text="size"
	          android:textSize="15sp"/>
	<CheckBox android:id="@+id/id_scan_item_rbtn" android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_alignParentEnd="true"
	             android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>