<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/head_background_color"
                android:orientation="vertical">
	<ImageView android:id="@+id/id_iv_head"
	           android:layout_width="140dp"
	           android:layout_height="140dp"
	           android:layout_above="@+id/id_btn_add_book" android:layout_centerHorizontal="true"
	           android:layout_marginBottom="25dp"/>
	<Button
		android:id="@+id/id_btn_add_book"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:background="@drawable/circle_button_selector"
		android:text="+"
		android:textSize="30sp"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@+id/id_iv_head" android:layout_toEndOf="@+id/id_iv_head"
		android:layout_marginLeft="30dp" android:layout_marginStart="27dp"
		android:layout_marginBottom="30dp"/>

</RelativeLayout>