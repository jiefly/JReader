<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp">
	<TextView android:id="@+id/id_fragment_title_tv" android:layout_width="match_parent"
	          android:layout_height="20dp"
	          android:layout_gravity="center_vertical"
	          android:gravity="left"
	          android:text="加载中，请稍后...（长时间未刷新请左右滑动强制刷新）"/>
	<ScrollView android:id="@+id/id_fragment_sv"

	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1">
		<TextView android:id="@+id/id_fragment_tv"
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:textSize="20sp"/>
	</ScrollView>
	<RelativeLayout android:layout_width="match_parent" android:layout_height="20dp"
	                android:orientation="horizontal">
		<TextView android:id="@+id/id_fragment_time_tv" android:layout_width="wrap_content"
		          android:layout_height="match_parent"
		          android:layout_alignParentEnd="true"
		          android:layout_alignParentRight="true"/>
		<TextView android:id="@+id/id_fragment_persent_tv" android:layout_width="wrap_content"
		          android:layout_height="match_parent"
		          android:layout_alignParentLeft="true"
		          android:layout_alignParentStart="true"/>

	</RelativeLayout>

</LinearLayout>