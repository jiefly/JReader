<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
              android:background="#cf747070"
              android:orientation="vertical"
                android:layout_height="wrap_content">
	<Button android:id="@+id/id_popup_cache_btn" android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_above="@+id/id_popup_top_btn"
	        android:background="#fff" android:text="缓存所有章节"
	        android:textColor="#000"/>
	<TextView android:layout_width="match_parent" android:layout_height="0.4dp"
	          android:layout_below="@id/id_popup_cache_btn" android:background="#9c9f9d9d"/>
	<Button android:id="@+id/id_popup_delete_btn" android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginTop="2dp"
	        android:background="#fff"
	        android:text="删除小说" android:textColor="#000"/>
	<TextView android:layout_width="match_parent" android:layout_height="0.4dp"
	          android:layout_below="@id/id_popup_top_btn" android:background="#9c9f9d9d"/>

	<Button android:id="@+id/id_popup_top_btn"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_above="@+id/id_popup_delete_btn"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_marginTop="2dp"
	        android:background="#fff" android:text="置顶"
	        android:textColor="#000"/>
</LinearLayout>